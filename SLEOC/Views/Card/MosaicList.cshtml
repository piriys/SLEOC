@model SLEOC.Models.CardMosaicListModel

@{
    ViewBag.Title = "MosaicList";
}

<script>
    Card.init();
</script>

    <article>
        <figure>
            <ul class="mosaic mosaic@(SLEOC.Helpers.MathHelpers.Clamp(Model.ImageURL.Count, 1, 8))">
                @for (int i = 0; i < Math.Min(Model.ImageURL.Count, 8); i++)
                {
                    <li style="background-image: url(@Model.ImageURL[i])"></li>
                }
            </ul>
        </figure>
        <section>
            <p>
                @Html.Raw(Model.Title)
            </p>
            <table class="text-small align-justify">
                <tbody>
                    @for (int i = 0; i < Math.Max(Model.Label.Count, Model.Item.Count); i++)
                    {
                        <tr>
                            <td>
                                @if (i < Model.Label.Count)
                                {
                                    @Html.Raw(Model.Label[i])
                                }
                            </td>
                            <td>
                                @if (i < Model.Item.Count)
                                {
                                    @Html.Raw(Model.Item[i])
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
        @if (Model.ShowLeftFooter)
        {
            <footer>
                <p>
                    @Html.Raw(Model.LeftFooter)
                </p>
            </footer>
        }

        @if (Model.ShowRightFooter)
        {
            <footer>
                <time>
                    @Html.Raw(Model.RightFooter)
                </time>
            </footer>
        }
    </article>
