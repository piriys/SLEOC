@model SLEOC.Models.CardVideoModel

@{
    ViewBag.Title = "Video";
}

<article data-type="video" data-encrypted="@ViewBag.Encrypted">
    <link href="//fonts.googleapis.com/css?family=Roboto:400,400italic,700,700italic,500,500italic,300,300italic,100,100italic" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/google_glass.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/google_glass_ui.css")" rel="stylesheet" />
    <div title="Send to Team" class="topbutton send" onclick="shareSLCard('@ViewBag.Encrypted');"></div>
    <div title="Join/Switch Team" class="topbutton team"></div>
    <div title="Delete Card" class="topbutton close"></div>

    <iframe width="640" height="360" src="//www.youtube.com/embed/@(Model.Video)?autoplay=@(Model.Autoplay ? 1 : 0)&autohide=2&controls=0&showinfo=0&rel=0" frameborder="0"></iframe>
    @if (Model.ShowLeftFooter)
    {
        <footer>
            <p>
                @Html.Raw(Model.LeftFooter)
            </p>
        </footer>
    }

    @if (Model.ShowRightFooter)
    {
        <footer>
            <time>
                @Html.Raw(Model.RightFooter)
            </time>
        </footer>
    }
</article>