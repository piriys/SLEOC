@model SLEOC.Models.CardAuthorModel

@{
    ViewBag.Title = "Author";
}

<!--Google Glass-->
<link href="//fonts.googleapis.com/css?family=Roboto:400,400italic,700,700italic,500,500italic,300,300italic,100,100italic" rel="stylesheet" type="text/css">
<link href="@Url.Content("~/Content/css/google_glass.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/css/google_glass_ui.css")" rel="stylesheet" />
<article class="author" data-type="author" data-encrypted="@ViewBag.Encrypted">
    <div class="topbutton send"></div>
    <div class="topbutton team"></div>
    <div class="topbutton close"></div>
    <img src="@Model.ImageURL" width="100%" height="100%">
    <div class="overlay-full" />
    <header>
        <img src="@Model.ProfileImageURL">
        <h1>@Model.Name</h1>
        <h2>@Model.Location</h2>
    </header>
    <section>
        <p class="text-auto-size">@Model.Description</p>
    </section>
    @if (Model.ShowLeftFooter)
    {
        <footer>
            <p>
                @Html.Raw(Model.LeftFooter)
            </p>
        </footer>
    }

    @if (Model.ShowRightFooter)
    {
        <footer>
            <time>
                @Html.Raw(Model.RightFooter)
            </time>
        </footer>
    }
</article>